<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CodeAlongEmpty</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name=_LoginPartial />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Test">Test</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="People" asp-action="Index">People</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Session" asp-action="SetSession">Set session</a>
                        </li>
                        <li class="nav-item">
                           <a class="nav-link text-dark" asp-controller="Session" asp-action="GetSession">Get session</a>
                        </li>
                        <li class="nav-item">
                           <a class="nav-link text-dark" asp-controller="Car" asp-action="Index">Cars</a>
                        </li>
                        <li class="nav-item">
                           <a class="nav-link text-dark" asp-controller="People" asp-action="People">Car people</a>
                        </li>
                        <li class="nav-item">
                           <a class="nav-link text-dark" asp-controller="CarOwner" asp-action="AddOwnerToCar">Add owner to car</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.ToShortDateString() - CodeAlongEmpty
        </div>
    </footer>
        
        @RenderSection("Scripts", required:false)
    </body>
</html>